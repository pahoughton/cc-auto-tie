[Unit]
Description=prometheus alertmanager alert gateway
Documentation=https://github.com/pahoughton/agate
After=network-online.target

[Service]
User={{ remed_user }}
ExecStart={{ remed_dir }}/bin/agate \
	     --listen-addr ":{{ port_agate }}" \
	     --script-dir {{ remed_dir }}/scripts \
	     --playbook-dir {{ remed_dir }}/playbooks \
	     --ticket-url http://{{ addr_ticket }}:{{ port_ticket }}/ticket

[Install]
WantedBy=multi-user.target
