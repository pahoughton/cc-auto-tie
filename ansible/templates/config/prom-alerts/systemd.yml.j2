---
groups:
  - name: systemd
    rules:
      {% for item in systemd_alerts %}

      - alert: {{ item }}-down
        expr: >-
          node_systemd_unit_state{
            name="{{ item }}.service",
            state="active"}
          == 0
        labels:
          ansible: restart-{{ item }}
        annotations:
          {%- raw %}
          description: "{{ $labels.name }} is down"
          {%- endraw -%}

      {% endfor %}
