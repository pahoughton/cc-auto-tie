---
groups:
  - name: systemd
    rules:
      - alert: postgres-down
        expr: node_systemd_unit_state{name="postgresql.service",state="active"}  == 0
        labels:
          ansible: restart-postgres
        annotations:
          description: "{{ $labels.name }} is down"
