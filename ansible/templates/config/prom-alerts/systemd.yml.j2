---
groups:
  - name: systemd
    rules:
      - alert: cupsd-down
        expr: >-
          node_systemd_unit_state{
            name="cupsd.service",
            state="active"}
          == 0
        labels:
          ansible: restart-cupsd
        annotations:
          description: "\{\{ $labels.name \}\} is down"
